<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0"/> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Border -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Border color -->
            <stroke
                android:width="2dp"
                android:color="#B0BEC5"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
